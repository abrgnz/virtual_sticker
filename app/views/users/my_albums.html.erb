<p id="notice"><%= notice %></p>

<h1>Available Albums</h1>

<table class="table">
  <thead>
    <tr>
      <th>Title</th>
      <th>Sticker number</th>
      <th>Image</th>
      <th>Description</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @albums.each do |album| %>
      <tr>
        <td><%= album.title %></td>
        <td><%= album.sticker_number %></td>
        <td> <img src="<%= album.image %>"> </td>
        <td><%= album.description %></td>
        <td><%= link_to 'Show', album %></td>
        <td><%= link_to 'Get Album', get_album_path(id:@user.id, album_id:album) %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<h2>My Albums</h2>

<table class="table">
  <thead>
    <tr>
      <th>Title</th>
      <th>Sticker number</th>
      <th>Image</th>
      <th>Description</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @user.albums.each do |album| %>
      <tr>
        <td><%= album.title %></td>
        <td><%= album.sticker_number %></td>
        <td><%= album.image %></td>
        <td><%= album.description %></td>
        <td><%= link_to 'Show', album %></td>
        <td><%= link_to 'Edit', edit_album_path(album) %></td>
        <td><%= link_to 'Destroy', album, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

